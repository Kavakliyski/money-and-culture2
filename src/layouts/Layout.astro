---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="theme-color" content="#000000" />
		<meta
			name="google-site-verification"
			content="HsC5JFyR15Ra6q9Vqm9a0YLupGqDDITkXrywrxfi4ws"
		/>

		<meta name="title" content="Money and culture" />
		<meta name="title" content="Пари и култура" />
		<meta name="title" content="Pari i kultura" />
		<meta name="description" content="" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	body {
		margin: 0;
		font-family: "Noto Serif HK", serif;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;

		background-color: #162123;
	}

	code {
		font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New",
			monospace;
	}

	h1 {
		text-align: center;
		font-size: 60px;
	}

	/* width */
	::-webkit-scrollbar {
		width: 5px;
	}

	/* Track */
	::-webkit-scrollbar-track {
		box-shadow: inset 0 0 5px #d0d9db;
		border-radius: 3px;
	}

	/* Handle */
	::-webkit-scrollbar-thumb {
		background: gray;
		border-radius: 10px;
	}
</style>
